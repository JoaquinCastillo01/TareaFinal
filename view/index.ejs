<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="estilos.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Adopta tu mascota</title>
</head>
<body>
    <div class="container">
        <h1>Pagina Principal</h1>
        <h2>Lista de mascotas disponibles para adoptar</h2>
        <div class="row r1">
            <table>
                <tr>
                    <th>id</th>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Especie</th>
                    <th>Raza</th>
                </tr>
                <% mascotas.forEach(user => {%>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.nombre %></td>
                    <td><%= user.edad %></td>
                    <td><%= user.especie %></td>
                    <td><%= user.raza %></td>
                    <td>
                        <a href="/editar/<%= user.id %>" class="link">Editar</a>
                        <a href="/delete/<%= user.id %>" class="link">Eliminar</a>
                    </td>
                </tr>
                <% }); %>
            </table>
        </div>
        <div class="row r2">
            <h2>Agregar registro</h2>
            <a href="/agregar" class="zoom">
                <img src="/p1.png" alt="img para entrar a agregar un registro">
            </a>
        </div>
    </div>
</body>
</html>